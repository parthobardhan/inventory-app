# Database Configuration
MONGODB_URI=mongodb://localhost:27017/textile-inventory

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Services (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OpenAI Configuration (for production deployment)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram Configuration (for voice/speech-to-text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AWS S3 Configuration (Optional - for image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name_here

# Ollama Configuration (Optional - for local AI)
OLLAMA_BASE_URL=http://localhost:11434

# Security (Optional)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
