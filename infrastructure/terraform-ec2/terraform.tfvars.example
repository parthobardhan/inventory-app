# Copy this file to terraform.tfvars and fill in your values

aws_region = "us-east-1"
instance_type = "t3.small"

# Optional: SSH key pair name for EC2 access
# key_pair_name = "your-key-pair-name"

# Required: MongoDB Atlas connection string
mongodb_uri = "mongodb+srv://username:password@cluster.mongodb.net/textile-inventory?retryWrites=true&w=majority"

# Required: Hugging Face API key for AI services
huggingface_api_key = "hf_your_api_key_here"

# Optional: Custom JWT secret (will use default if not provided)
# jwt_secret = "your-secure-jwt-secret-here"

# Optional: Custom S3 bucket name (will use default if not provided)
# s3_bucket_name = "your-unique-bucket-name"
